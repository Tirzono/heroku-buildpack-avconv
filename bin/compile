#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install avconv"
BUILD_DIR=$1
VENDOR_DIR="vendor"
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p avconv
cd avconv
cp ${BP_DIR}/vendor/* .

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/avconv.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/avconv"' >> $PROFILE_PATH
